{
    "name": "letter-navigator",
    "displayName": "letter navigator",
    "icon": "icon.png",
    "author": {
        "name": "Sajidur Rahman",
        "email": "sajibsrs@gmail.com"
    },
    "publisher": "sajibsrs",
    "description": "Navigate with letter keys and perform other essential operations. Almost, replacement of the arrow keys!",
    "version": "0.1.1",
    "engines": {
        "vscode": "^1.59.0"
    },
    "repository": {
        "url": "https://github.com/sajibsrs/letter-navigator"
    },
    "categories": [
        "Keymaps"
    ],
    "keywords": [
        "kaymaps",
        "letter-navigator",
        "navigator",
        "navigation",
        "controller",
        "letter key navigation"
    ],
    "contributes": {
        "keybindings": [
            {
                "key": "alt+j",
                "command": "cursorLeft",
                "when": "textInputFocus"
            },
            {
                "key": "alt+i",
                "command": "cursorUp",
                "when": "textInputFocus"
            },
            {
                "key": "alt+l",
                "command": "cursorRight",
                "when": "textInputFocus"
            },
            {
                "key": "alt+k",
                "command": "cursorDown",
                "when": "textInputFocus"
            },
            {
                "key": "alt+o",
                "command": "cursorEnd",
                "when": "textInputFocus"
            },
            {
                "key": "alt+u",
                "command": "cursorHome",
                "when": "textInputFocus"
            },
            {
                "key": "ctrl+alt+j",
                "command": "cursorWordLeft",
                "when": "textInputFocus"
            },
            {
                "key": "ctrl+alt+l",
                "command": "cursorWordRight",
                "when": "textInputFocus"
            },
            {
                "key": "ctrl+alt+i",
                "command": "editor.action.moveLinesUpAction",
                "when": "textInputFocus"
            },
            {
                "key": "ctrl+alt+k",
                "command": "editor.action.moveLinesDownAction",
                "when": "textInputFocus"
            },
            {
                "key": "alt+shift+j",
                "command": "cursorLeftSelect",
                "when": "textInputFocus"
            },
            {
                "key": "alt+shift+i",
                "command": "cursorUpSelect",
                "when": "textInputFocus"
            },
            {
                "key": "alt+shift+l",
                "command": "cursorRightSelect",
                "when": "textInputFocus"
            },
            {
                "key": "alt+shift+k",
                "command": "cursorDownSelect",
                "when": "textInputFocus"
            },
            {
                "key": "ctrl+shift+alt+j",
                "command": "cursorWordLeftSelect",
                "when": "textInputFocus"
            },
            {
                "key": "ctrl+shift+alt+l",
                "command": "cursorWordRightSelect",
                "when": "textInputFocus"
            },
            {
                "key": "ctrl+shift+alt+u",
                "command": "cursorHomeSelect",
                "when": "textInputFocus"
            },
            {
                "key": "ctrl+shift+alt+o",
                "command": "cursorEndSelect",
                "when": "textInputFocus"
            },
            {
                "key": "alt+k",
                "command": "selectNextSuggestion",
                "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
            },
            {
                "key": "alt+i",
                "command": "selectPrevSuggestion",
                "when": "suggestWidgetMultipleSuggestions && suggestWidgetVisible && textInputFocus"
            },
            {
                "key": "ctrl+alt+u",
                "command": "workbench.action.previousEditor"
            },
            {
                "key": "ctrl+alt+o",
                "command": "workbench.action.nextEditor"
            },
            {
                "key": "ctrl+alt+shift+i",
                "command": "scrollLineUp",
                "when": "editorTextFocus"
            },
            {
                "key": "ctrl+alt+shift+k",
                "command": "scrollLineDown",
                "when": "editorTextFocus"
            }
        ]
    }
}